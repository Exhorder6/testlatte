{
	"name": "testcafe-runner",
	"displayName": "TestCafe Runner",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Testcafe Runner",
			"properties": {
				"testcaferunner.browser": {
					"type": "string",
					"default": "chrome",
					"description": "Browser used to run tests",
					"enum": [
						"chrome",
						"firefox"
					],
					"enumDescriptions": [
						"Use Chrome to run tests",
						"Use Firefox to run tests"
					]
				}
			}
		},
		"views": {
			"test": [
				{
					"id": "testOutline",
					"name": "TestCafe Test List"
				},
				{
					"id": "browserSelection",
					"name": "Select Browser"
				}
			]
		},
		"commands": [
			{
				"command": "nodeDependencies.refreshEntry",
				"title": "Run All",
				"icon": {
					"light": "resources/light/run.svg",
					"dark": "resources/dark/run.svg"
				}
			},
			{
				"command": "nodeDependencies.addEntry",
				"title": "Test"
			},
			{
				"command": "testOutline.openTest",
				"title": "Open"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == testOutline",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.addEntry",
					"when": "view == testOutline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.34.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"fs": "0.0.1-security",
		"testcafe": "^1.4.1",
		"testcafe-browser-tools": "^1.6.8"
	}
}
