{
	"name": "testlatte",
	"displayName": "TestLatte",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"test": [
				{
					"id": "testOutline",
					"name": "TestCafe Test List"
				},
				{
					"id": "browserSelection",
					"name": "Select Browser"
				}
			]
		},
		"commands": [
			{
				"command": "nodeDependencies.refreshEntry.example",
				"title": "Run All",
				"icon": {
					"light": "resources/light/run.svg",
					"dark": "resources/dark/run.svg"
				}
			},
			{
				"command": "nodeDependencies.addEntry.example",
				"title": "Test"
			},
			{
				"command": "browserSelection.toggleSelection",
				"title": "Select"
			},
			{
				"command": "testOutline.runTest",
				"title": "Run Test",
				"icon": {
					"light": "resources/light/run.svg",
					"dark": "resources/dark/run.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry.example",
					"when": "view == testOutline",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.addEntry.example",
					"when": "view == testOutline"
				}
			],
			"view/item/context": [
				{
					"command": "testOutline.runTest",
					"when": "view == testOutline",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "TestLatte",
			"properties": {
				"testlatte.filePath": {
					"type": "string",
					"default": "test/",
					"description": "Files or directories (separated by a space) from which to search and run the tests."
				},
				"testlatte.customArguments": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Custom arguments to testcafe command line"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.34.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"fs": "0.0.1-security",
		"testcafe": "^1.4.1",
		"testcafe-browser-tools": "^1.6.8"
	}
}
