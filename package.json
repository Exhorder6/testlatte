{
	"name": "testlatte",
	"displayName": "TestLatte",
	"description": "Run your TestCafé tests in the Sidebar of Visual Studio Code",
	"publisher": "sshimono",
	"version": "1.1.4",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Debuggers",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"keywords": [
		"TestCafe",
		"TestCafé",
		"Test",
		"Runner"
	],
	"main": "./dist/extension",
	"contributes": {
		"views": {
			"test": [
				{
					"id": "testOutline",
					"name": "TestCafe Test List"
				},
				{
					"id": "browserSelection",
					"name": "Select Browser"
				}
			]
		},
		"commands": [
			{
				"command": "browserSelection.toggleSelection",
				"title": "Select"
			},
			{
				"command": "testOutline.runTest",
				"title": "Run Test",
				"icon": {
					"light": "resources/light/run.png",
					"dark": "resources/dark/run.png"
				}
			},
			{
				"command": "testOutline.runAll",
				"title": "Run All",
				"icon": {
					"light": "resources/light/run.png",
					"dark": "resources/dark/run.png"
				}
			},
			{
				"command": "testOutline.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.png",
					"dark": "resources/dark/refresh.png"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "testOutline.runAll",
					"when": "view == testOutline",
					"group": "navigation"
				},
				{
					"command": "testOutline.refresh",
					"when": "view == testOutline",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "testOutline.runTest",
					"when": "view == testOutline",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "TestLatte",
			"properties": {
				"testlatte.filePath": {
					"type": "string",
					"default": "test/",
					"description": "Directory from which to search and run the tests."
				},
				"testlatte.customArguments": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Custom arguments to testcafe command line."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.34.0",
		"copy-webpack-plugin": "^5.0.4",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"string-replace-loader": "^2.2.0",
		"ts-loader": "^6.1.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.9"
	},
	"dependencies": {
		"testcafe": "^1.5.0",
		"testcafe-browser-tools": "^1.6.8"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Selminha/testlatte"
	},
	"bugs": {
		"url": "https://github.com/Selminha/testlatte/issues"
	}
}
